@{
    ViewBag.Title = "Profile";
}
<link rel="stylesheet" href="~/Content/bootstrap.css" />
<link rel="stylesheet" href="~/Content/MyStyle.css" />

<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="row">
    <div class="col-sm-2">
        <div class="row">
            @Ajax.ActionLink("Information", "_UserProfileInfo", "Account", new { UserName = ViewBag.UserName }, new AjaxOptions { UpdateTargetId = "Profile_information" }, new { @class = "btn btn-default btn-lg btn-block" })
        </div>
        <div class="row">
            @Ajax.ActionLink("Ads", "_ListAds", "Ad", new { userName = ViewBag.UserName }, new AjaxOptions { UpdateTargetId = "Profile_information" }, new { @class = "btn btn-default btn-lg btn-block" })
        </div>
        <div class="row">
            @Ajax.ActionLink("Applications", "_UserProfileApplication", "Account", new { userName = ViewBag.UserName }, new AjaxOptions { UpdateTargetId = "Profile_information" }, new { @class = "btn btn-default btn-lg btn-block" })
        </div>
    </div>
    <div class="col-sm-10" id="Profile_information"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#Profile_information').load('@Url.Action("_UserProfileInfo", "Account", new { userName= ViewBag.UserName })')
        });
    </script>
}